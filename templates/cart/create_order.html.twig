{# templates/order/create_order.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Create Order
{% endblock %}

{% block body %}

	<div class="d-flex justify-content-center py-5">
		<div class="card mb-4 col-md-4">
			<div class="card-header py-3">
				<h5 class="mb-0">Summary</h5>
			</div>
			<div class="card-body">
				<ul class="list-group list-group-flush">
					{% for product in cartData %}

						<li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
							{{ product.vendor.name }}
							{{ product.GPU.name  }}
							-
							{{ productQuantities[product.id] }}
							Qty
							<span>${{ productQuantities[product.id] * product.price }}</span>
						</li>
					{% endfor %}

					<li class="list-group-item d-flex justify-content-between align-items-center px-0">
						Shipping
						<span>Free</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3 fs-5">
						<div>
							<strong>Total amount</strong>

						</div>
						<span>
							<strong>${{totalPrice}}</strong>
						</span>
					</li>
				</ul>
                	{{ form(form)}}
				{# <a class="btn btn-dark btn-lg btn-block w-100" href="{{ path('create_order') }}">Create Order</a> #}
			</div>
		</div>
	</div>

{% endblock %}
