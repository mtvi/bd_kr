{% extends 'base.html.twig' %}
{% block title %}
	List of Categories

{% endblock %}
{% block body %}
	{% include 'admin/base.html.twig' %}

	<form id="searchForm" method="get" action="{{ path('categories_view') }}">
		<div class="container mt-5">
			<div class="row">
				<div class="col-md-2">
					<div class="form-group">
						<a class="btn btn-dark form-control" href="{{ path('create_category') }}">
							Create category
						</a>
					</div>
				</div>
				<div class="col-md-8">
					<div class="form-group">
						<input type="text" class="form-control" id="search" name="search" value="{{ search }}" placeholder="Search">
					</div>
				</div>

				<div class="col-md-2">
					<div class="form-group">
						<button type="submit" class="btn btn-success form-control">Search</button>
					</div>
				</div>


			</div>
			<div class="row mt-3">

				<div class="">


					<div class="col">
						<table class="table table-striped table-hover table-sm align-middle">
							<thead>
								<tr>
									<th>
										ID

									</th>
									<th>
										Name

									</th>
									<th>
										Description

									</th>
									<th>
										Delete

									</th>
									<th>
										Edit

									</th>
								</tr>
							</thead>
							<tbody class="table-group-divider">
								{% for category in categories %}
									<tr>
										<td>
											{{ category.id }}
										</td>
										<td>
											{{ category.CategoryName }}
										</td>
										<td>
											{{ category.Description }}
										</td>
										<td>
											<a href="{{ path('delete_category', { 'id': category.id }) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">
												&#10005;

											</a>
										</td>
										<td>
											<a href="{{ path('edit_category', { 'id': category.id }) }}" class="btn btn-success">
												&#9998;

											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>

				</div>
			</form>


		{% endblock %}
