{% extends 'base.html.twig' %}
{% block title %}
	List of Categories

{% endblock %}
{% block body %}
	<a href="{{ path('create_category') }}">
		Create Category

	</a>
	<br>
	<h1>
		List of Categories

	</h1>
	<form id="searchForm" method="get" action="{{ path('categories_view') }}">
		<label for="search">
			Search:

		</label>
		<input type="text" placeholder="Пошук" id="search" name="search" value="{{ search }}">

		
		<button type="submit">
			Search

		</button>
	</form>
	<a href="{{ path('categories_view') }}">
		clear search

	</a>
	<br>
	<table>
		<thead>
			<tr>
				<th>
					ID

				</th>
				<th>
					Name

				</th>
				<th>
					Rank

				</th>
				<th>
					Delete

				</th>
				<th>
					Edit

				</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>
						{{ category.id }}
					</td>
					<td>
						{{ category.CategoryName }}
					</td>
					
					<td>
						<a href="{{ path('delete_category', { 'id': category.id }) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">
							Delete category

						</a>
					</td>
					<td>
						<a href="{{ path('edit_category', { 'id': category.id }) }}" class="btn btn-success">
							Edit category

						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</body></html>{% endblock %}
