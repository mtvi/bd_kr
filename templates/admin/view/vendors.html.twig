{% extends 'base.html.twig' %}
{% block title %}
	List of Vendors

{% endblock %}
{% block body %}
	<a href="{{ path('create_vendor') }}">
		Create vendor

	</a>
	<br>
	<h1>
		List of Vendors

	</h1>
	<form id="searchForm" method="get" action="{{ path('vendors_view') }}">
		<label for="search">
			Search:

		</label>
		<input type="text" placeholder="Пошук" id="search" name="search" value="{{ search }}">

		<label for="sort">
			Sort:

		</label>
		<select id="sort" name="sort">
			<option value="id asc" {% if sort == 'id asc' %} selected {% endif %}>
				ID Ascending

			</option>
			<option value="id desc" {% if sort == 'id desc' %} selected {% endif %}>
				ID Descending

			</option>
		</select>
		<button type="submit">
			Search

		</button>
	</form>
	<a href="{{ path('vendors_view') }}">
		clear search

	</a>
	<br>
	<table>
		<thead>
			<tr>
				<th>
					ID

				</th>
				<th>
					name

				</th>
				<th>
					Website

				</th>
				<th>
					Country

				</th>
				<th>
					Delete

				</th>
				<th>
					Edit

				</th>
			</tr>
		</thead>
		<tbody>
			{% for vendor in vendors %}
				<tr>
					<td>
						{{ vendor.id }}
					</td>
					<td>
						{{ vendor.Name }}
					</td>
					<td>
						{{ vendor.Website }}
					</td>
					<td>
						{{ vendor.Country }}
                    </td>
					
					<td>
						<a href="{{ path('delete_vendor', { 'id': vendor.id }) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">
							Delete vendor

						</a>
					</td>
					<td>
						<a href="{{ path('edit_vendor', { 'id': vendor.id }) }}" class="btn btn-success">
							Edit vendor

						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</body></html>{% endblock %}
