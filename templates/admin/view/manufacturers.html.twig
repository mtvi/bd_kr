{% extends 'base.html.twig' %}
{% block title %}
	List of Manufacturers

{% endblock %}
{% block body %}
{% include 'admin/base.html.twig' %}
<form id="searchForm" method="get" action="{{ path('manufacturers_view') }}">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-2">
                <div class="form-group">
                    <a class="btn btn-dark form-control" href="{{ path('create_manufacturer') }}">
                        Create manufacturer
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" id="search" name="search" value="{{ search }}" placeholder="Search">
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <select class="form-select" id="sort" name="sort">
                        <option value="id asc" {% if sort == 'id asc' %} selected {% endif %}>
                            ID Ascending
                        </option>
                        <option value="id desc" {% if sort == 'id desc' %} selected {% endif %}>
                            ID Descending
                        </option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <button type="submit" class="btn btn-success form-control">Search</button>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                <table class="table table-striped table-hover table-sm align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Website</th>
                            <th>Country</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        {% for manufacturer in manufacturers %}
                            <tr>
                                <td>{{ manufacturer.id }}</td>
                                <td>{{ manufacturer.ManufacturerName }}</td>
                                <td>{{ manufacturer.Website }}</td>
                                <td>{{ manufacturer.Country }}</td>
                                <td>
                                    <a href="{{ path('delete_manufacturer', { 'id': manufacturer.id }) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this vendor?')">
                                        &#10005;
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('edit_manufacturer', { 'id': manufacturer.id }) }}" class="btn btn-success">
                                        &#9998;
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>


{% endblock %}
